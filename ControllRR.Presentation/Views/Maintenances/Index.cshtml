@model IEnumerable<ControllRR.Domain.Entities.Maintenance>
@{
    ViewData["Title"] = "Lista de Operações";
}

<!-- <h2>Clientes</h2> -->

    <div class="mt-4">
         <a asp-action="New" class="btn btn-primary">Nova Entrada</a>
       
    </div>

     <div class="card mt-4">
        <div class="card-header">
         Lista de Operações
     </div>

           <div class="card-body">
            <div class="row">
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.SimpleDesc)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.OpenDate)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.CloseDate)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
                
            </th>
             
          
            <th>
                Ações
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SimpleDesc)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.OpenDate)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.CloseDate)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                
                
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalhar</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
