 @model ControllRR.Application.Dto.DeviceDto;
@{
   
    ViewData["Title"]="Listagem de Dispositivos";
}
<div class="mt-4">
         <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
    <hr>
<div class="container">
    <h2 class="my-4">@ViewData["Title"]</h2>
 
    <div class="card">
        <div class="card-header">
            Data:: -- Consulta de Dispositivos :: Computadores/Tablets/Impressoras ::
        </div>
   
<div class="row">
<div class="col-md-12">
<br>
<div class="container">
    <div class="table-responsive">
        <table id="deviceTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tipo</th>
                    <th>Patrimonio</th>
                    <th>Modelo</th>
                     <th>Nº Serie</th>
                    <th>Setor</th>
                    <th>Descrição</th>
                    <th>Ações Disponiveis</th>
                </tr>
            </thead>
            <tbody>
               
            </tbody>
             
        </table>
    </div>
</div>
</div>
</div>
@section Scripts {
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
       $('#deviceTable').DataTable({
    processing: true,
    serverSide: true,
    ajax: {
        url: '/Devices/GetList', // URL do endpoint no backend
        type: 'POST',
        dataType: 'json'
    },
    columns: [
        { data: 'type', name: 'Type' },
        { data: 'identifier', name: 'Identifier' },
        { data: 'model', name: 'Model' },
        { data: 'serialNumber', name: 'SerialNumber' },
        { data: 'sector', name: 'Sector' },
        { data: 'description', name: 'Description' },
        { 
            data: null, // Coluna para ações
            orderable: false,
            searchable: false,
            render: function(data, type, row) {
                return `
                    <a class="btn btn-sm btn-success" href="/Devices/GetMaintenances/${row.deviceId}"><span class="fa fa-eye"></span> Ver</a></button>
                    <a class="btn btn-sm btn-warning" href="/Devices/Details/${row.id}"><span class="fa fa-edit"></span> Editar</a></button>
                `;
            }
        }
    ],
    language: {
        lengthMenu: 'Exibir _MENU_ registros por página',
        zeroRecords: 'Nenhum registro encontrado',
        info: 'Exibindo página _PAGE_ de _PAGES_',
        infoEmpty: 'Nenhum registro disponível',
        infoFiltered: '(filtrado de _MAX_ registros no total)',
        search: 'Pesquisar:',
        paginate: {
            first: 'Primeiro',
            last: 'Último',
            next: 'Próximo',
            previous: 'Anterior'
        }
    },
});

    </script>
}
