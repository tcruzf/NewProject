@model ControllRR.Application.Dto.SectorDto;
 @{
    ViewData["Title"] = "Registrar novo Setor";
}
<div class="container-fluid px-4">
    <h1 class="mt-4"></h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/Devices">Setores</a></li>
          <li class="breadcrumb-item active">Adicionar</li>
    </ol>
</div>

<div class="row">
<div class="col-md-12">
<br>
<div class="container">
<div class="row">
<div class="col-12">
<div class="card">
<div class="card-header text-center bg-dark text-white">
<div class="row align-items-center">
<div class="col-md-12">
<h5>::Novo Setor::</h5>
</div>
</div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="card mt-12">
<div class="card-header">Data::
</div>
<div class="card-body">
<div class="row">
<form asp-controller="Sectors" asp-action="CreateNewSector" method="post">
    <div class="row">
     <div class="form-group col-md-2">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control input-sm" />
    <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
    <label asp-for="Location"></label>
    <input asp-for="Location" class="form-control input-sm" />
    <span asp-validation-for="Location" class="text-danger"></span>
    </div> 
    <div class="form-group col-md-4">
    <label asp-for="Address"></label>
    <input asp-for="Address" class="form-control input-sm" />
    <span asp-validation-for="Address" class="text-danger"></span>
    </div> 
    <div class="col">
    <label asp-for="Number"></label>
    <input asp-for="Number" class="form-control input-sm" />
    <span asp-validation-for="Number" class="text-danger"></span>
    </div> 
    <div class="form-group col-md-2">
    <label asp-for="Neighborhood"></label>
    <input asp-for="Neighborhood" class="form-control input-sm" />
    <span asp-validation-for="Neighborhood" class="text-danger"></span>
    </div> 
    <div class="form-group col-md-3">
    <label asp-for="City"></label>
    <input asp-for="City" class="form-control input-sm" />
    <span asp-validation-for="City" class="text-danger"></span>
    </div> 
    <div class="form-group col-md-2">
    <label asp-for="Cep"></label>
    <input asp-for="Cep" class="form-control input-sm" />
    <span asp-validation-for="Cep" class="text-danger"></span>
    </div> 
    <div class="col">
    <label asp-for="RequesterName"></label>
    <input asp-for="RequesterName" class="form-control input-sm" />
    <span asp-validation-for="RequesterName" class="text-danger"></span>
    </div> 
    </div>
    <div class="mt-4">
    <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
       <script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-1.9.1.min.js"></script>

   
   <script type="text/javascript">
$(document).ready(function () {
$("#Seller_DepartmentId").change(function () {
var f = $("form");
f.submit(function () {
var productData = f.serialize();
$.post(f.attr("action"), Seller_Department, function (result, status) {
if (result !== null) {
$("#Seller_Department").text(result.Seller_Department);
}
else {
alert('Invalid ID');
}
});
});
});
});


</script>

   
}